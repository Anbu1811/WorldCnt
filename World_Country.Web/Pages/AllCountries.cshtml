@page
@model World_Country.Web.Pages.AllCountriesModel
@{
}

<h2>Country List</h2>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<td>Name</td>
			<td>Short Name</td>
			<td>Country Code</td>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.AllCountry)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.ShortName</td>
				<td>@item.CountryCode</td>
			</tr>
		}
	</tbody>
</table>

